@model DaNangSafeMap.Models.Entities.Article

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Tin tức</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>

            <h1 class="fw-bold mb-3">@Model.Title</h1>
            <div class="text-muted mb-4">
                <span><i class="bi bi-person"></i> Tác giả: @(Model.Author?.FullName ?? "Admin")</span> | 
                <span><i class="bi bi-calendar"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow mb-4" alt="Main Image">
            }

            <div class="article-content lead" style="line-height: 1.8; text-align: justify;">
                @Html.Raw(Model.Content)
            </div>

            <hr class="my-5">
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
        </div>
    </div>
</div>